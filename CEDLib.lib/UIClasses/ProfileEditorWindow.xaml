<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Element Linker Profiles (v2)"
        Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Profile / Type selectors -->
            <RowDefinition Height="Auto"/>   <!-- Offsets -->
            <RowDefinition Height="*"/>      <!-- Parameters + Tags -->
            <RowDefinition Height="Auto"/>   <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Profile + Type Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Profile (CAD block):"
                       VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="ProfileCombo"
                      Width="220"
                      SelectionChanged="ProfileCombo_SelectionChanged"
                      Margin="0,0,15,0"/>
            <TextBlock Text="Type (label):"
                       VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="TypeCombo"
                      Width="260"
                      SelectionChanged="TypeCombo_SelectionChanged"/>
        </StackPanel>

        <!-- Offsets -->
        <GroupBox Grid.Row="1" Header="Offsets (inches / degrees)" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="X (in)" Margin="0,0,0,2"/>
                    <TextBox x:Name="OffsetXBox" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,5,0">
                    <TextBlock Text="Y (in)" Margin="0,0,0,2"/>
                    <TextBox x:Name="OffsetYBox" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,5,0">
                    <TextBlock Text="Z (in)" Margin="0,0,0,2"/>
                    <TextBox x:Name="OffsetZBox" />
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Rotation (deg)" Margin="0,0,0,2"/>
                    <TextBox x:Name="OffsetRotBox" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Parameters + Tags -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Parameters -->
            <GroupBox Header="Instance Parameters" Grid.Column="0" Margin="0,0,5,0">
                <Grid Margin="5">
                    <!-- List of parameter rows: [Name][Value] -->
                    <ListBox x:Name="ParamList"/>
                </Grid>
            </GroupBox>

            <!-- Tags -->
            <GroupBox Header="Tags" Grid.Column="1" Margin="5,0,0,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="TagList"
                             Grid.Row="0"
                             Margin="0,0,0,5"/>
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="AddTagButton"
                                Content="Add Tag"
                                Width="80"
                                Click="AddTagButton_Click"/>
                        <Button x:Name="RemoveTagButton"
                                Content="Remove Selected"
                                Width="120"
                                Margin="5,0,0,0"
                                Click="RemoveTagButton_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="OkButton" Content="OK"
                    Width="80" Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel"
                    Width="80"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

