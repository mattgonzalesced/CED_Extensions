<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage YAML Profiles"
        Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="430"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Profiles" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ProfileSearchBox"
                             Grid.Column="0"
                             Margin="0,0,5,0"
                             ToolTip="Type to filter profiles by CAD name"
                             TextChanged="ProfileSearchBox_TextChanged"/>
                    <Button x:Name="CreateOrphanButton"
                            Grid.Column="1"
                            Content="Create Orphan Profile"
                            Width="160"
                            Margin="0,0,5,0"
                            Click="CreateOrphanButton_Click"/>
                    <Button x:Name="DeleteProfileButton"
                            Grid.Column="2"
                            Content="Delete Profile"
                            Width="130"
                            Click="DeleteProfileButton_Click"
                            IsEnabled="False"/>
                </Grid>
                <ListBox x:Name="ProfileList"
                         Grid.Row="1"
                         Margin="0"
                         SelectionChanged="ProfileList_SelectionChanged"/>
            </Grid>
        </GroupBox>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <Button x:Name="AddEquipmentButton"
                        Content="Add Equipment to Profiles"
                        Width="210"
                        Margin="0,0,0,5"
                        Click="AddEquipmentButton_Click"
                        IsEnabled="False"/>
                <TextBlock x:Name="ParentInfoText"
                           Text="Parent: (none)"
                           FontWeight="Bold"
                           Margin="0,0,0,5"
                           Visibility="Collapsed"/>
                <GroupBox Header="Types">
                    <ListBox x:Name="TypeList"
                             Height="120"
                             SelectionChanged="TypeList_SelectionChanged"/>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                <Button x:Name="EditButton"
                        Content="Edit"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="EditButton_Click"/>
                <Button x:Name="RenameButton"
                        Content="Rename Profile"
                        Width="120"
                        Margin="0,0,10,0"
                        IsEnabled="False"
                        Click="RenameButton_Click"/>
                <Button x:Name="DeleteTypesButton"
                        Content="Delete Types..."
                        Width="120"
                        Margin="0,0,10,0"
                        Click="DeleteTypesButton_Click"/>
            </StackPanel>

            <GroupBox Grid.Row="2" Header="Offsets (inches / degrees)" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="X (in)" Margin="0,0,0,2"/>
                        <TextBox x:Name="OffsetXBox" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,5,0">
                        <TextBlock Text="Y (in)" Margin="0,0,0,2"/>
                        <TextBox x:Name="OffsetYBox" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,5,0">
                        <TextBlock Text="Z (in)" Margin="0,0,0,2"/>
                        <TextBox x:Name="OffsetZBox" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Rotation (deg)" Margin="0,0,0,2"/>
                        <TextBox x:Name="OffsetRotBox" IsReadOnly="True"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Instance Parameters" Grid.Column="0" Margin="0,0,5,0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="ParamList"
                                 Grid.Row="0"
                                 Margin="0,0,0,5"
                                 SelectionChanged="ParamList_SelectionChanged"/>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="AddParamButton"
                                    Content="Add Parameter"
                                    Width="120"
                                    Margin="0,0,5,0"
                                    IsEnabled="False"
                                    Click="AddParamButton_Click"/>
                            <Button x:Name="DeleteParamButton"
                                    Content="Delete Parameter"
                                    Width="120"
                                    IsEnabled="False"
                                    Click="DeleteParamButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Tags" Grid.Column="1" Margin="5,0,0,0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="TagList"
                                 Grid.Row="0"
                                 Margin="0,0,0,5"/>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="AddTagButton"
                                    Content="Add Tag"
                                    Width="80"
                                    IsEnabled="False"
                                    Click="AddTagButton_Click"/>
                            <Button x:Name="RemoveTagButton"
                                    Content="Remove Selected"
                                    Width="120"
                                    Margin="5,0,0,0"
                                    IsEnabled="False"
                                    Click="RemoveTagButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>

            <Grid Grid.Row="4" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Keynotes" Grid.Column="0" Margin="0,0,5,0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="KeynoteList"
                                 Grid.Row="0"
                                 Margin="0,0,0,5"
                                 Height="130"/>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="AddKeynoteButton"
                                    Content="Add Keynote"
                                    Width="110"
                                    Margin="0,0,5,0"
                                    Click="AddKeynoteButton_Click"
                                    IsEnabled="False"/>
                            <Button x:Name="RemoveKeynoteButton"
                                    Content="Remove Selected"
                                    Width="130"
                                    Click="RemoveKeynoteButton_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Text Notes" Grid.Column="1" Margin="5,0,0,0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="TextNoteList"
                                 Grid.Row="0"
                                 Margin="0,0,0,5"
                                 Height="130"/>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="AddTextNoteButton"
                                    Content="Add Text Note"
                                    Width="110"
                                    Margin="0,0,5,0"
                                    Click="AddTextNoteButton_Click"
                                    IsEnabled="False"/>
                            <Button x:Name="RemoveTextNoteButton"
                                    Content="Remove Selected"
                                    Width="130"
                                    Click="RemoveTextNoteButton_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>

            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="OkButton" Content="OK"
                        Width="80" Margin="0,0,10,0"
                        Click="OkButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel"
                        Width="80"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
