<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculate Circuits Settings"
        Height="470"
        Width="700"
        MinHeight="420"
        MinWidth="620"
        Background="#FFF6F6F6"
        Foreground="#222"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        SizeToContent="Manual">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2.6*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Minimum Conduit Size" Margin="0,0,8,10" VerticalAlignment="Center"/>
        <TextBox x:Name="min_conduit_size_tb" Grid.Row="0" Grid.Column="1" Margin="0,0,8,10" Padding="6"/>
        <TextBlock x:Name="min_conduit_default" Grid.Row="0" Grid.Column="2" Margin="0,0,0,10" FontStyle="Italic" Foreground="#5C5C5C"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Max Conduit Fill" Margin="0,0,8,10" VerticalAlignment="Center"/>
        <TextBox x:Name="max_conduit_fill_tb" Grid.Row="1" Grid.Column="1" Margin="0,0,8,10" Padding="6"/>
        <TextBlock x:Name="max_conduit_fill_default" Grid.Row="1" Grid.Column="2" Margin="0,0,0,10" FontStyle="Italic" Foreground="#5C5C5C"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Neutral Behavior" Margin="0,0,8,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="neutral_behavior_cb" Grid.Row="2" Grid.Column="1" Margin="0,0,8,10" Padding="6">
            <ComboBoxItem Content="Match hot conductors" Tag="match_hot"/>
            <ComboBoxItem Content="Manual neutral" Tag="manual"/>
        </ComboBox>
        <TextBlock x:Name="neutral_behavior_default" Grid.Row="2" Grid.Column="2" Margin="0,0,0,10" FontStyle="Italic" Foreground="#5C5C5C"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Branch Voltage Drop" Margin="0,0,8,10" VerticalAlignment="Center"/>
        <TextBox x:Name="max_branch_vd_tb" Grid.Row="3" Grid.Column="1" Margin="0,0,8,10" Padding="6"/>
        <TextBlock x:Name="max_branch_vd_default" Grid.Row="3" Grid.Column="2" Margin="0,0,0,10" FontStyle="Italic" Foreground="#5C5C5C"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Max Feeder Voltage Drop" Margin="0,0,8,10" VerticalAlignment="Center"/>
        <TextBox x:Name="max_feeder_vd_tb" Grid.Row="4" Grid.Column="1" Margin="0,0,8,10" Padding="6"/>
        <TextBlock x:Name="max_feeder_vd_default" Grid.Row="4" Grid.Column="2" Margin="0,0,0,10" FontStyle="Italic" Foreground="#5C5C5C"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Feeder VD Method" Margin="0,0,8,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="feeder_vd_method_cb" Grid.Row="5" Grid.Column="1" Margin="0,0,8,10" Padding="6">
            <ComboBoxItem Content="Demand" Tag="demand"/>
            <ComboBoxItem Content="Connected" Tag="connected"/>
            <ComboBoxItem Content="80% of Max" Tag="80_percent"/>
        </ComboBox>
        <TextBlock x:Name="feeder_vd_method_default" Grid.Row="5" Grid.Column="2" Margin="0,0,0,10" FontStyle="Italic" Foreground="#5C5C5C"/>

        <Border Grid.Row="6" Grid.ColumnSpan="3" Margin="0,0,0,10" Padding="8" Background="#FFF0F0F0" BorderBrush="#DDD" BorderThickness="1">
            <TextBlock x:Name="help_preview" TextWrapping="Wrap" Foreground="#333"/>
        </Border>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0" >
            <Button x:Name="help_btn" Content="Help" Margin="0,0,8,0" Padding="10,6" MinWidth="80"/>
            <Button x:Name="reset_btn" Content="Reset to Defaults" Margin="0,0,8,0" Padding="14,6" MinWidth="130"/>
            <Button x:Name="cancel_btn" Content="Cancel" Margin="0,0,8,0" Padding="14,6" MinWidth="90"/>
            <Button x:Name="save_btn" Content="Save Settings" Padding="16,6" MinWidth="120"/>
        </StackPanel>
    </Grid>
</Window>
