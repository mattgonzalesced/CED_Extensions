<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculate Circuits Settings"
        Height="420"
        Width="520"
        Background="#FF1E1E1E"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Minimum Conduit Size" Margin="0,0,8,6"/>
        <TextBox x:Name="min_conduit_size_tb" Grid.Row="0" Grid.Column="1" Margin="0,0,8,6"/>
        <TextBlock x:Name="min_conduit_default" Grid.Row="0" Grid.Column="2" Margin="0,0,0,6" FontStyle="Italic" Foreground="#FFB3B3B3"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Max Conduit Fill" Margin="0,0,8,6"/>
        <TextBox x:Name="max_conduit_fill_tb" Grid.Row="1" Grid.Column="1" Margin="0,0,8,6"/>
        <TextBlock x:Name="max_conduit_fill_default" Grid.Row="1" Grid.Column="2" Margin="0,0,0,6" FontStyle="Italic" Foreground="#FFB3B3B3"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Neutral Behavior" Margin="0,0,8,6"/>
        <ComboBox x:Name="neutral_behavior_cb" Grid.Row="2" Grid.Column="1" Margin="0,0,8,6">
            <ComboBoxItem Content="Match hot conductors" Tag="match_hot"/>
            <ComboBoxItem Content="Manual neutral" Tag="manual"/>
        </ComboBox>
        <TextBlock x:Name="neutral_behavior_default" Grid.Row="2" Grid.Column="2" Margin="0,0,0,6" FontStyle="Italic" Foreground="#FFB3B3B3"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Branch Voltage Drop" Margin="0,0,8,6"/>
        <TextBox x:Name="max_branch_vd_tb" Grid.Row="3" Grid.Column="1" Margin="0,0,8,6"/>
        <TextBlock x:Name="max_branch_vd_default" Grid.Row="3" Grid.Column="2" Margin="0,0,0,6" FontStyle="Italic" Foreground="#FFB3B3B3"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Max Feeder Voltage Drop" Margin="0,0,8,6"/>
        <TextBox x:Name="max_feeder_vd_tb" Grid.Row="4" Grid.Column="1" Margin="0,0,8,6"/>
        <TextBlock x:Name="max_feeder_vd_default" Grid.Row="4" Grid.Column="2" Margin="0,0,0,6" FontStyle="Italic" Foreground="#FFB3B3B3"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Feeder VD Method" Margin="0,0,8,6"/>
        <ComboBox x:Name="feeder_vd_method_cb" Grid.Row="5" Grid.Column="1" Margin="0,0,8,6">
            <ComboBoxItem Content="Demand" Tag="demand"/>
            <ComboBoxItem Content="Connected" Tag="connected"/>
            <ComboBoxItem Content="80% of Max" Tag="80_percent"/>
        </ComboBox>
        <TextBlock x:Name="feeder_vd_method_default" Grid.Row="5" Grid.Column="2" Margin="0,0,0,6" FontStyle="Italic" Foreground="#FFB3B3B3"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="reset_btn" Content="Reset to Defaults" Margin="0,0,8,0" Width="140"/>
            <Button x:Name="cancel_btn" Content="Cancel" Margin="0,0,8,0" Width="80"/>
            <Button x:Name="save_btn" Content="Save Settings" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
