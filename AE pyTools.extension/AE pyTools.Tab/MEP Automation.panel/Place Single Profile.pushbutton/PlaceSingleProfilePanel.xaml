<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F4F4F4">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="Place Single Profile"
               FontSize="14"
               FontWeight="Bold"
               Margin="0,0,0,8"/>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6">
      <TextBlock Text="Profile:" Width="60" VerticalAlignment="Center"/>
      <ComboBox Name="ProfileCombo" Width="260" MinHeight="22"
                IsEditable="True" IsReadOnly="True"/>
    </StackPanel>

    <StackPanel Grid.Row="2" Margin="0,0,0,6">
      <TextBlock Text="Profile Types:" Margin="0,0,0,4"/>
      <Border BorderBrush="#B0B0B0" BorderThickness="1" Height="80">
        <ListBox Name="ProfileTypesList"/>
      </Border>
    </StackPanel>

    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,6">
      <CheckBox Name="IndependentOnlyCheck" Content="Independent only"/>
    </StackPanel>

    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8">
      <Button Name="PlaceButton" Content="Pick Point and Place" Width="150" Height="24"/>
      <Button Name="PlaceMultiButton" Content="Pick Multiple Points and Place" Width="210" Height="24" Margin="8,0,0,0"/>
      <Button Name="RefreshButton" Content="Refresh" Width="80" Height="24" Margin="8,0,0,0"/>
    </StackPanel>

    <StackPanel Grid.Row="5">
      <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
        <TextBlock Text="Profile Preview (Top View)" VerticalAlignment="Center"/>
      </StackPanel>
      <Border BorderBrush="#B0B0B0" BorderThickness="1" Height="240">
        <Grid>
          <Canvas Name="PreviewCanvas" Background="#111111"/>
        </Grid>
      </Border>
      <StackPanel Orientation="Horizontal" Margin="0,8,0,4">
        <TextBlock Text="3D Preview" VerticalAlignment="Center"/>
      </StackPanel>
      <Border BorderBrush="#B0B0B0" BorderThickness="1" Height="200">
        <Grid>
          <Image Name="Preview3DImage" Stretch="Uniform" />
        </Grid>
      </Border>
    </StackPanel>

    <TextBlock Grid.Row="6" Name="StatusText" Margin="0,6,0,0" Foreground="#444444"/>
  </Grid>
</Page>
