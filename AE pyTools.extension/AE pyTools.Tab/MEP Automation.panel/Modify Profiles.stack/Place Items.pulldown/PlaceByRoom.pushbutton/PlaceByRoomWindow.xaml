<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Place by Room Counts"
        Height="700"
        Width="980"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Name="HeaderText"
               Text="Set profile and type counts per room. Profile counts multiply type counts."
               TextWrapping="Wrap"
               Margin="0,0,0,8"/>

    <ScrollViewer Grid.Row="1"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
      <StackPanel Name="RoomPanel"/>
    </ScrollViewer>

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,8,0,0">
      <Button Name="ApplyButton" Content="Apply" Width="90" Margin="0,0,8,0"/>
      <Button Name="CancelButton" Content="Cancel" Width="90"/>
    </StackPanel>
  </Grid>
</Window>
