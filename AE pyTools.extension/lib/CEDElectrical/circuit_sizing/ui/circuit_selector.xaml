<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Circuit Selector" Height="520" Width="520"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Name="SearchBox" Width="220" Margin="0,0,10,0"/>
                <TextBlock Text="Panel:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Name="PanelFilter" Width="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <CheckBox Name="PreserveSelection" Content="Preserve selection when filtering" IsChecked="True"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
                    <Button Name="SelectAllButton" Content="Select All" Width="90" Margin="0,0,6,0" />
                    <Button Name="SelectNoneButton" Content="Select None" Width="90" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox Name="CircuitList" Grid.Row="0" Margin="0,0,0,10" SelectionMode="Extended" />

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Name="CancelButton" Content="Cancel" Width="100" Margin="0,0,10,0" />
                <Button Name="CalculateButton" Content="Calculate Selected" Width="150" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
