          <Border CornerRadius="12,12,0,0" Opacity="0.2">
            <Border.Background>
              <RadialGradientBrush x:Name="AccentGlow" Center="0.5,0.5" RadiusX="1" RadiusY="1">
                <GradientStop Color="#00BCF2" Offset="0"/>
                <GradientStop Color="Transparent" Offset="1"/>
              </RadialGradientBrush>
            </Border.Background>
            <Border.Triggers>
              <EventTrigger RoutedEvent="Border.Loaded">
                <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
              </EventTrigger>
            </Border.Triggers>
          </Border>

          <Border CornerRadius="12,12,0,0" Padding="30,24" BorderBrush="White" BorderThickness="0,0,0,1">
            <Border.Background>
              <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                <GradientStop Color="#0078D4" Offset="0"/>
                <GradientStop Color="#00BCF2" Offset="0.5"/>
                <GradientStop Color="#0078D4" Offset="1"/>
              </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
              <TextBlock x:Name="Lightbulbicon" Text="💡" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0">
                <TextBlock.RenderTransform>
                  <RotateTransform x:Name="LightbulbRotate" Angle="0" CenterX="16" CenterY="16"/>
                </TextBlock.RenderTransform>
                <TextBlock.Triggers>
                  <EventTrigger RoutedEvent="TextBlock.MouseEnter">
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LightbulbRotate"
                                       Storyboard.TargetProperty="Angle"
                                       From="0" To="360" Duration="0:0:0.6"
                                       AccelerationRatio="0.3" DecelerationRatio="0.3"/>
                      </Storyboard>
                    </BeginStoryboard>
                  </EventTrigger>
                </TextBlock.Triggers>
              </TextBlock>
              <Label x:Name="HeaderLabel"
                     Content="Match each CAD Fixture to a Revit Family and Type"
                     Foreground="White"
                     FontSize="22"
                     FontWeight="Bold"
                     VerticalAlignment="Center">
                <Label.Effect>
                  <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                </Label.Effect>
              </Label>
            </StackPanel>
          </Border>
        </Grid>
      </Border>

      <!-- Mapping Section Container with Glassmorphism -->
      <Border CornerRadius="12" Padding="24" Margin="0,0,0,20"
              BorderBrush="White" BorderThickness="1">
        <Border.Background>
          <SolidColorBrush Color="White" Opacity="0.7"/>
        </Border.Background>
        <Border.Effect>
          <DropShadowEffect Color="#B0C4DE" Direction="270" ShadowDepth="3" BlurRadius="15" Opacity="0.2"/>
        </Border.Effect>
        <Grid>
          <!-- Subtle animated background pattern -->
          <Border CornerRadius="12" Opacity="0.08">
            <Border.Background>
              <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0078D4" Offset="0"/>
                <GradientStop Color="Transparent" Offset="0.5"/>
                <GradientStop Color="#00BCF2" Offset="1"/>
              </LinearGradientBrush>
            </Border.Background>
          </Border>

          <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
              <TextBlock Text="🔗" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0">
                <TextBlock.RenderTransform>
                  <ScaleTransform x:Name="LinkScale" ScaleX="1" ScaleY="1" CenterX="10" CenterY="10"/>
                </TextBlock.RenderTransform>
                <TextBlock.Triggers>
                  <EventTrigger RoutedEvent="TextBlock.MouseEnter">
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LinkScale"
                                       Storyboard.TargetProperty="ScaleX"
                                       From="1" To="1.2" Duration="0:0:0.2" AutoReverse="True"/>
                        <DoubleAnimation Storyboard.TargetName="LinkScale"
                                       Storyboard.TargetProperty="ScaleY"
                                       From="1" To="1.2" Duration="0:0:0.2" AutoReverse="True"/>
                      </Storyboard>
                    </BeginStoryboard>
                  </EventTrigger>
                </TextBlock.Triggers>
              </TextBlock>
              <TextBlock Text="Fixture Mappings"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#0078D4"
                       VerticalAlignment="Center"/>
            </StackPanel>
            <!-- Mapping rows are added to this StackPanel -->
            <StackPanel x:Name="MappingStackPanel" />
          </StackPanel>
        </Grid>
      </Border>

      <!-- Divisor Section with Glassmorphism -->
      <Border CornerRadius="12" Padding="24" Margin="0,0,0,20"
              BorderBrush="White" BorderThickness="1">
        <Border.Background>
          <SolidColorBrush Color="White" Opacity="0.7"/>
        </Border.Background>
        <Border.Effect>
          <DropShadowEffect Color="#B0C4DE" Direction="270" ShadowDepth="3" BlurRadius="15" Opacity="0.2"/>
        </Border.Effect>
        <Grid>
          <!-- Subtle animated background -->
          <Border CornerRadius="12" Opacity="0.06">
            <Border.Background>
              <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#00BCF2" Offset="0"/>
                <GradientStop Color="Transparent" Offset="1"/>
              </LinearGradientBrush>
            </Border.Background>
          </Border>

          <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
              <TextBlock x:Name="Rulericon" Text="📐" FontSize="22" VerticalAlignment="Center" Margin="0,0,10,0">
                <TextBlock.RenderTransform>
                  <RotateTransform x:Name="RulerRotate" Angle="0" CenterX="11" CenterY="11"/>
                </TextBlock.RenderTransform>
                <TextBlock.Triggers>
                  <EventTrigger RoutedEvent="TextBlock.MouseEnter">
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="RulerRotate"
                                       Storyboard.TargetProperty="Angle"
                                       From="0" To="-15" Duration="0:0:0.15" AutoReverse="True"
                                       RepeatBehavior="2x"/>
                      </Storyboard>
                    </BeginStoryboard>
                  </EventTrigger>
                </TextBlock.Triggers>
              </TextBlock>
              <Label Content="Coordinate Divisor (XYZ values will be divided by this):"
                     FontSize="16"
                     FontWeight="Bold"
                     Foreground="#1D1D1F"
                     VerticalAlignment="Center"/>
            </StackPanel>
            <TextBox x:Name="DivisorTextBox"
                     Text="12"
                     Width="400"
                     HorizontalAlignment="Left"
                     Style="{StaticResource ModernTextBox}"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- Action Buttons -->
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Margin="0,10,0,0">
        <Button x:Name="CancelButton"
                Content="Cancel"
                Width="100"
                Margin="0,0,10,0"
                Style="{StaticResource CancelButton}"/>
        <Button x:Name="OkButton"
                Content="OK"
                Width="100"
                Style="{StaticResource ModernButton}"/>
      </StackPanel>

    </StackPanel>
  </ScrollViewer>
  </Grid>
</Window>
