<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resolve YAML Import Discrepancies"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False"
        MinWidth="520"
        MinHeight="320">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Review the discrepancies below, then choose how you want to resolve them."
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>
        <TextBox Name="summary_box"
                 Grid.Row="1"
                 Margin="0,6,0,10"
                 Width="600"
                 Height="220"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
        <StackPanel Grid.Row="2">
            <StackPanel Name="conflict_panel" Margin="0,0,0,8">
                <TextBlock Text="Formulas exist in both YAML and family (choose one option):"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
                <ComboBox Name="conflict_combo" Margin="0,2,0,0" MinWidth="320"/>
            </StackPanel>
            <StackPanel Name="yaml_only_panel" Margin="0,0,0,8">
                <TextBlock Text="Formulas exist only in YAML:"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
                <ComboBox Name="yaml_only_combo" Margin="0,2,0,0" MinWidth="320"/>
            </StackPanel>
            <StackPanel Name="family_only_panel" Margin="0,0,0,8">
                <TextBlock Text="Formulas exist only in the family:"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
                <ComboBox Name="family_only_combo" Margin="0,2,0,0" MinWidth="320"/>
            </StackPanel>
            <StackPanel Name="missing_panel" Margin="0,0,0,8">
                <TextBlock Text="Parameters exist in YAML but not in family:"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
                <ComboBox Name="missing_combo" Margin="0,2,0,0" MinWidth="320"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Name="ok_button"
                        Width="90"
                        Margin="0,0,8,0"
                        IsDefault="True"
                        Click="on_ok">Apply</Button>
                <Button Name="cancel_button"
                        Width="90"
                        IsCancel="True"
                        Click="on_cancel">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
