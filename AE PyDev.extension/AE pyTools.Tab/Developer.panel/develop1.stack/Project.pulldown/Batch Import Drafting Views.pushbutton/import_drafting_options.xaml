<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Drafting Views"
        Height="260"
        Width="520"
        MinHeight="240"
        MinWidth="480"
        Background="#FFF6F6F6"
        Foreground="#222"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Mode label -->
            <RowDefinition Height="Auto"/>   <!-- Mode radios -->
            <RowDefinition Height="16"/>     <!-- Spacer -->
            <RowDefinition Height="Auto"/>   <!-- Existing label -->
            <RowDefinition Height="Auto"/>   <!-- Existing radios -->
            <RowDefinition Height="*"/>      <!-- Help -->
            <RowDefinition Height="Auto"/>   <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Import mode -->
        <TextBlock Grid.Row="0"
                   Text="Import Mode"
                   FontWeight="Bold"
                   Margin="0,0,0,6"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,0">
            <RadioButton x:Name="single_mode_rb"
                         Content="Insert from single file (pick drafting views)"
                         Tag="single"
                         Margin="0,0,0,4"/>
            <RadioButton x:Name="multi_mode_rb"
                         Content="Insert from multiple files (folder â†’ all drafting views)"
                         Tag="multi"
                         Margin="0,0,0,0"
                         IsChecked="True"/>
        </StackPanel>

        <!-- Spacer -->
        <Border Grid.Row="2" Height="1" Background="#DDD" Margin="0,8,0,8"/>

        <!-- Existing behavior -->
        <TextBlock Grid.Row="3"
                   Text="When a drafting view with the same name already exists"
                   FontWeight="Bold"
                   Margin="0,0,0,6"/>

        <StackPanel Grid.Row="4" Orientation="Vertical">
            <RadioButton x:Name="skip_existing_rb"
                         Content="Skip existing views"
                         Tag="skip"
                         Margin="0,0,0,2"/>
            <RadioButton x:Name="update_existing_rb"
                         Content="Update existing view contents"
                         Tag="update"
                         Margin="0,0,0,2"
                         IsChecked="True"/>
            <RadioButton x:Name="duplicate_existing_rb"
                         Content="Duplicate view (import as a new drafting view)"
                         Tag="duplicate"
                         Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Help / description -->
        <Border Grid.Row="5"
                Margin="0,10,0,10"
                Padding="8"
                Background="#FFF0F0F0"
                BorderBrush="#DDD"
                BorderThickness="1">
            <TextBlock x:Name="help_preview"
                       TextWrapping="Wrap"
                       FontSize="12"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,4,0,0">
            <Button x:Name="cancel_btn"
                    Content="Cancel"
                    Margin="0,0,8,0"
                    Padding="14,6"
                    MinWidth="90"/>
            <Button x:Name="ok_btn"
                    Content="Continue"
                    Padding="16,6"
                    MinWidth="110"/>
        </StackPanel>
    </Grid>
</Window>
